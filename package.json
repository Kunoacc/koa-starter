{
  "name": "myspeed",
  "version": "0.0.1",
  "description": "Koa backend for MySpeed Web Application",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dist && NODE_ENV=production babel src -d dist -s",
    "dev": "cross-env NODE_ENV=development nodemon src/main.js",
    "start": "cross-env NODE_ENV=development node src/main.js",
    "lint": "eslint --fix src && prettier --write \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunoacc/koa-starter.git"
  },
  "author": "nellyatuonwu@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kunoacc/koa-starter/issues"
  },
  "homepage": "https://github.com/kunoacc/koa-starter#readme",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "awilix": "^4.1.0",
    "awilix-koa": "^3.1.0",
    "boom": "^7.3.0",
    "bristol": "^0.4.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.21",
    "mongoose": "^5.4.6",
    "palin": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/runtime": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-source-map-support": "^2.0.1",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "smid": "^0.1.1"
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          "source-map-support"
        ]
      }
    }
  }
}
